                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guide4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text=""
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/guide5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text=""
                android:textColor="#666666"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
