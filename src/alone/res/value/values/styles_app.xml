<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Equant horizontal flex style. -->
    <style name="comui_equant_horizontal_flex_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="flexDirection">row</item>
        <item name="justifyContent">space_between</item>
        <item name="alignItems">center</item>
    </style>

    <!-- Equant horizontal button style. -->
    <style name="comui_equant_horizontal_button_style"
           parent="comres_buttonClick_rectangle_blue_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="layout_flexGrow">1</item>
    </style>
</resources>
