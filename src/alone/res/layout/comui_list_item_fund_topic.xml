<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

    </data>

    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxItemFundTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/comres_sideMargin_tiny"
            android:paddingRight="@dimen/comres_sideMargin_tiny"
            android:background="@color/comres_color_transparent"
            app:flexDirection="column"
            app:justifyContent="flex_start"
            app:alignItems="center"
            >

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/comres_sideMargin_tiny"
                android:paddingBottom="@dimen/comres_sideMargin_micro"
                app:flexDirection="column"
                app:justifyContent="flex_start"
                app:alignItems="center"
                >

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexDirection="row"
                    app:justifyContent="space_between"
                    app:alignItems="center"
                    >

                <com.githubyss.mobile.common.ui.textview.KeyWordHighlightTextView
                        android:id="@+id/textFundTopicTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="20dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="易方达消费行业主题易方达消费行业主题易方达消费行业主题易方达消费行业主题易方达消费行业主题"
                        android:textColor="@color/comres_color_333333"
                        android:textSize="@dimen/comres_textSize_15sp"
                        android:textStyle="bold"
                        />

                <TextView
                        android:id="@+id/textFundTopicRiseFallRatio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="+15.26%"
                        android:textColor="@color/comres_color_ff5500"
                        android:textSize="@dimen/comres_textSize_18sp"
                        android:textStyle="bold"
                        app:layout_flexShrink="0"
                        />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:flexDirection="row"
                    app:justifyContent="space_between"
                    app:alignItems="center"
                    >

                <TextView
                        android:id="@+id/textFundTopicHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="20dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="1000万用户的投资选择1000万用户的投资选择1000万用户的投资选择1000万用户的投资选择1000万用户的投资选择"
                        android:textColor="@color/comres_color_999999"
                        android:textSize="@dimen/comres_textSize_12sp"
                        />

                <TextView
                        android:id="@+id/textFundTopicRiseFallTimeSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="最近一年增长率"
                        android:textColor="@color/comres_color_999999"
                        android:textSize="@dimen/comres_textSize_11sp"
                        app:layout_flexShrink="0"
                        />
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <include layout="@layout/comui_view_separator_horizontal_light_gray" />
    </com.google.android.flexbox.FlexboxLayout>
</layout>
