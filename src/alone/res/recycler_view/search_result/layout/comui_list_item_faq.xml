<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

    </data>

    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxItemFaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/comui_sideMargin_tiny"
            android:paddingRight="@dimen/comui_sideMargin_tiny"
            android:background="@color/comui_color_transparent"
            app:flexDirection="column"
            app:justifyContent="flex_start"
            app:alignItems="center"
            >

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/comui_sideMargin_tiny"
                android:paddingBottom="@dimen/comui_sideMargin_tiny"
                app:flexDirection="column"
                app:justifyContent="flex_start"
                app:alignItems="flex_start"
                >

            <com.githubyss.mobile.common.ui.text_view.KeyWordHighlightTextView
                    android:id="@+id/textFaqContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="基金红包使用规则"
                    android:textColor="@color/comui_color_666666"
                    android:textSize="@dimen/comui_textSize_14sp"
                    />
        </com.google.android.flexbox.FlexboxLayout>

        <include layout="@layout/comui_view_separator_horizontal_light_gray" />
    </com.google.android.flexbox.FlexboxLayout>
</layout>
