<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

    </data>

    <FrameLayout
            android:id="@+id/flexboxItemSpecialTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/comui_layoutBg_transparent"
            >

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="column"
                app:justifyContent="flex_start"
                app:alignItems="center"
                >

            <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexboxSpecialTopicBg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/comui_sideMargin_large"
                    android:layout_marginLeft="@dimen/comui_sideMargin_large"
                    android:layout_marginRight="@dimen/comui_sideMargin_large"
                    android:paddingRight="20dp"
                    app:flexDirection="column"
                    app:justifyContent="flex_start"
                    app:alignItems="flex_start"
                    >

                <TextView
                        android:id="@+id/textSpecialTopicBgTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="新年开门红理财基金好物推荐榜单"
                        android:textColor="@color/comui_color_ffffff"
                        android:textSize="@dimen/comui_textSize_20sp"
                        />

                <TextView
                        android:id="@+id/textSpecialTopicBgDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="广告卖点广告卖点广告卖点广告卖点广告卖点广告卖点广告卖点广告卖点广告卖点广告卖点广告卖点广告卖点"
                        android:textColor="@color/comui_color_ffffff"
                        android:textSize="@dimen/comui_textSize_12sp"
                        />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/comui_sideMargin_large"
                    android:layout_marginLeft="@dimen/comui_sideMargin_tiny"
                    android:layout_marginRight="@dimen/comui_sideMargin_tiny"
                    android:background="@drawable/comui_card_bg_rectangle_normal_white"
                    app:flexDirection="column"
                    app:justifyContent="flex_start"
                    app:alignItems="center"
                    >

                <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/comui_sideMargin_tiny"
                        app:flexDirection="row"
                        app:justifyContent="space_between"
                        app:alignItems="center"
                        >

                    <ImageView
                            android:id="@+id/imageSpecialTopicIcon"
                            android:layout_width="30dp"
                            android:layout_height="27dp"
                            android:background="@drawable/comui_tag_bg_rectangle_micro_gray"
                            app:layout_flexShrink="0"
                            />

                    <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/flexboxSpecialTopicHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/comui_sideMargin_normal"
                            android:paddingRight="20dp"
                            app:flexDirection="column"
                            app:justifyContent="space_between"
                            app:alignItems="flex_start"
                            app:layout_flexGrow="1"
                            >

                        <TextView
                                android:id="@+id/textSpecialTopicTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="基金"
                                android:textColor="@color/comui_color_333333"
                                android:textSize="@dimen/comui_textSize_16sp"
                                android:textStyle="bold"
                                />

                        <TextView
                                android:id="@+id/textSpecialTopicDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="买基金1折起，支持极速卖出，买基金1折起买基金1折起，支持极速卖出，买基金1折起"
                                android:textColor="@color/comui_color_727272"
                                android:textSize="@dimen/comui_textSize_11sp"
                                />
                    </com.google.android.flexbox.FlexboxLayout>

                    <TextView
                            android:id="@+id/textSpecialTopicSeeMore"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawablePadding="2dp"
                            android:drawableRight="@drawable/comui_icon_see_more_gray"
                            android:gravity="center"
                            app:layout_flexShrink="0"
                            />
                </com.google.android.flexbox.FlexboxLayout>

                <com.githubyss.mobile.common.ui.banner.BannerCarouselView
                        android:id="@+id/bannerSpecialTopicAd"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="@dimen/comui_sideMargin_tiny"
                        android:layout_marginRight="@dimen/comui_sideMargin_tiny"
                        android:background="@drawable/comui_tag_bg_rectangle_micro_gray"
                        />

                <include layout="@layout/comui_view_separator_horizontal_light_gray" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerSpecialTopicIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/comui_color_transparent"
                        />
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </FrameLayout>
</layout>
