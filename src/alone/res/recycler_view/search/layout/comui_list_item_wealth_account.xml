<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

    </data>

    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxItemWealthAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/comui_sideMargin_tiny"
            android:paddingRight="@dimen/comui_sideMargin_tiny"
            android:background="@color/comui_color_transparent"
            app:flexDirection="column"
            app:justifyContent="flex_start"
            app:alignItems="center"
            >

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/comui_sideMargin_micro"
                android:paddingBottom="@dimen/comui_sideMargin_micro"
                app:flexDirection="row"
                app:justifyContent="space_between"
                app:alignItems="center"
                >

            <ImageView
                    android:id="@+id/imageWealthAccount"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/comui_tag_bg_rectangle_micro_gray"
                    app:layout_flexShrink="0"
                    />

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    app:flexDirection="column"
                    app:justifyContent="flex_start"
                    app:alignItems="flex_start"
                    app:layout_flexGrow="1"
                    >

                <com.githubyss.mobile.common.ui.text_view.KeyWordHighlightTextView
                        android:id="@+id/textWealthAccountTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="广发基金"
                        android:textColor="@color/comui_color_333333"
                        android:textSize="@dimen/comui_textSize_15sp"
                        android:textStyle="bold"
                        />

                <com.githubyss.mobile.common.ui.text_view.KeyWordHighlightTextView
                        android:id="@+id/textWealthAccountContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comui_sideMargin_micro"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="说明文案说明文案说明文案说明说明文案说明文案说明文案说明说明文案说明文案说明文案说明说明文案说明文案说明文案说明"
                        android:textColor="@color/comui_color_999999"
                        android:textSize="@dimen/comui_textSize_12sp"
                        />
            </com.google.android.flexbox.FlexboxLayout>

            <Button
                    style="@style/comui_buttonToggle_rectangle_blue_transparent_style"
                    android:id="@+id/buttonWealthAccountIsFollowed"
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:textSize="@dimen/comui_textSize_13sp"
                    app:layout_flexShrink="0"
                    />
        </com.google.android.flexbox.FlexboxLayout>

        <include layout="@layout/comui_view_separator_horizontal_light_gray" />
    </com.google.android.flexbox.FlexboxLayout>
</layout>
