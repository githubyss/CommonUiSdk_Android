<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dialog style. -->
    <style name="comui_dialog_style">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/comres_color_transparent</item>
        <item name="android:windowBackground">@color/comres_color_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Button click voice select style. -->
    <style name="comui_buttonClick_voiceSelectConfirm_style">
        <item name="android:background">@drawable/comui_button_click_bg_voice_select_confirm</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:enabled">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/comres_sideMargin_nano</item>
    </style>

    <!-- Button click voice select style. -->
    <style name="comui_buttonClick_voiceSelectCancel_style">
        <item name="android:background">@drawable/comui_button_click_bg_voice_select_cancel</item>
        <item name="android:textColor">#464B5C</item>
        <item name="android:textSize">14sp</item>
        <item name="android:enabled">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/comres_sideMargin_nano</item>
    </style>
</resources>
