<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dialog style. -->
    <style name="comui_dialog_style">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/comres_color_transparent</item>
        <item name="android:windowBackground">@color/comres_color_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Dialog button clickable voice select style. -->
    <style name="comui_dialog_button_clickable_hint_left"
           parent="comres_button_clickable_common">
        <item name="android:background">@drawable/comres_button_clickable_bg_graydark_no_border_rectangle_8dp_round_bottomleft</item>
        <item name="android:textColor">@drawable/comres_button_clickable_bg_graydark_no_border_rectangle_8dp_round_bottomleft</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="comui_dialog_button_clickable_hint_right"
           parent="comres_button_clickable_common">
        <item name="android:background">@drawable/comres_button_clickable_bg_graylight_no_border_rectangle_8dp_round_bottomright</item>
        <item name="android:textColor">@drawable/comres_button_clickable_bg_graylight_no_border_rectangle_8dp_round_bottomright</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Dialog button clickable voice select style. -->
    <style name="comui_dialog_button_clickable_voice_select_confirm"
           parent="comres_button_clickable_graydark_no_border_rectangle_4dp_round_all">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="comui_dialog_button_clickable_voice_select_cancel"
           parent="comres_button_clickable_white_with_border_rectangle_4dp_round_all">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
