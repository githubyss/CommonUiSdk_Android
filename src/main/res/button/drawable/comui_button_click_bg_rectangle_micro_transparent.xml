<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comui_buttonClickBgNormal_transparent" />
            <corners android:radius="@dimen/comui_cornerRadius_micro" />
            <stroke android:width="@dimen/comui_strokeWidth_thin"
                    android:color="@color/comui_buttonClickStroke_transparent" />
        </shape>
    </item>

    <item android:state_enabled="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comui_buttonClickBgPressed_transparent" />
            <corners android:radius="@dimen/comui_cornerRadius_micro" />
            <stroke android:width="@dimen/comui_strokeWidth_thin"
                    android:color="@color/comui_buttonClickStroke_transparent" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comui_buttonClickBgDisabled_transparent" />
            <corners android:radius="@dimen/comui_cornerRadius_micro" />
            <stroke android:width="@dimen/comui_strokeWidth_none"
                    android:color="@color/comui_buttonClickStroke_transparent" />
        </shape>
    </item>
</selector>
