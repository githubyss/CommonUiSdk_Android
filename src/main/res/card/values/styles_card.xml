<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card orange style. -->
    <style name="comui_card_orange_style">
        <item name="android:background">@drawable/comui_card_bg_rectangle_normal_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Card orange label primary style. -->
    <style name="comui_cardLabelPrimary_orange_style">
        <item name="android:textColor">@color/comui_cardLabelPrimary_orange</item>
        <item name="android:textSize">@dimen/comui_cardLabelPrimaryTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Card orange label secondary style. -->
    <style name="comui_cardLabelSecondary_orange_style">
        <item name="android:textColor">@color/comui_cardLabelSecondary_orange</item>
        <item name="android:textSize">@dimen/comui_cardLabelSecondaryTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Card transparent style. -->
    <style name="comui_card_transparent_style">
        <item name="android:background">@drawable/comui_card_bg_rectangle_normal_transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Card transparent label primary style. -->
    <style name="comui_cardLabelPrimary_transparent_style">
        <item name="android:textColor">@color/comui_cardLabelPrimary_transparent</item>
        <item name="android:textSize">@dimen/comui_cardLabelPrimaryTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Card transparent label secondary style. -->
    <style name="comui_cardLabelSecondary_transparent_style">
        <item name="android:textColor">@color/comui_cardLabelSecondary_transparent</item>
        <item name="android:textSize">@dimen/comui_cardLabelSecondaryTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>
</resources>
