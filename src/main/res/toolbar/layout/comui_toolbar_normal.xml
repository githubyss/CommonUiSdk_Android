<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_toolbar_normal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/action_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/comres_sideMargin_normal"
            android:src="@drawable/comres_icon_close_no_border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_title"
            />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comres_sideMargin_normal"
            android:layout_marginEnd="@dimen/comres_sideMargin_normal"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/comres_color_353d44"
            android:textSize="@dimen/comres_textSize_24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/action_left"
            app:layout_constraintEnd_toStartOf="@id/action_right_1"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/action_right_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/comres_sideMargin_normal"
            android:src="@drawable/comres_icon_close_no_border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_title"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
