<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application gray theme. -->
    <style name="comui_app_gray_theme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/comui_toolbarPrimary_gray</item>
        <item name="colorPrimaryDark">@color/comui_toolbarPrimaryDark_gray</item>
        <item name="colorAccent">@color/comui_toolbarAccent_gray</item>
    </style>

    <!-- Application gray translucent theme. -->
    <style name="comui_app_grayTranslucent_theme"
           parent="comui_app_gray_theme">
        <item name="android:windowBackground">@color/comui_layoutBg_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!-- Application gray translucent fullscreen theme. -->
    <style name="comui_app_grayTranslucentFullscreen_theme"
           parent="comui_app_grayTranslucent_theme">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
