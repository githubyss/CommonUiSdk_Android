<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <LinearLayout
        android:id="@+id/fl_time_countdown_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_remaining_hour"
            android:background="@drawable/comui_time_bg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:text="00"
            android:textColor="@color/comres_color_ffffff"
            android:textSize="@dimen/comres_textSize_18sp"
            />

        <TextView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:text=":"
            android:textColor="@color/comres_color_487bfe"
            android:textSize="@dimen/comres_textSize_18sp"
            />

        <TextView
            android:id="@+id/tv_remaining_minute"
            android:background="@drawable/comui_time_bg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:text="00"
            android:textColor="@color/comres_color_ffffff"
            android:textSize="@dimen/comres_textSize_18sp"
            />

        <TextView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:text=":"
            android:textColor="@color/comres_color_487bfe"
            android:textSize="@dimen/comres_textSize_18sp"
            />

        <TextView
            android:id="@+id/tv_remaining_second"
            android:background="@drawable/comui_time_bg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:text="00"
            android:textColor="@color/comres_color_ffffff"
            android:textSize="@dimen/comres_textSize_18sp"
            />
    </LinearLayout>
</layout>
