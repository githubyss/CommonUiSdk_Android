<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

    </data>

    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxItemHeaderHasMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/comui_color_transparent"
            app:flexDirection="column"
            app:justifyContent="center"
            app:alignItems="flex_start"
            >

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/comui_sideMargin_tiny"
                app:flexDirection="row"
                app:justifyContent="space_between"
                app:alignItems="center"
                >

            <TextView
                    android:id="@+id/textHeaderHasMoreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:maxLines="1"
                    android:text="Header"
                    android:textColor="@color/comui_color_333333"
                    android:textSize="@dimen/comui_textSize_16sp"
                    android:textStyle="bold"
                    />

            <TextView
                    android:id="@+id/textHeaderHasMoreSeeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/comui_icon_see_more_gray"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="更多"
                    android:textColor="@color/comui_color_666666"
                    android:textSize="@dimen/comui_textSize_12sp"
                    />
        </com.google.android.flexbox.FlexboxLayout>

        <include layout="@layout/comui_view_separator_horizontal_light_gray" />
    </com.google.android.flexbox.FlexboxLayout>
</layout>
