<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <LinearLayout
            android:id="@+id/ll_better2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/ll_better2_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loan_corner_bg"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_better2_pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:textColor="@color/comres_color_121a32"
                    android:textSize="16sp" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="bottom"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_better2_pro_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sn_font"
                        android:maxLines="1"
                        android:textColor="@color/comres_color_fa5050"
                        android:textSize="28sp" />

                <TextView
                        android:id="@+id/tv_better2_pro_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sn_font"
                        android:layout_marginEnd="-2dp"
                        android:maxLines="1"
                        android:textColor="@color/comres_color_fa5050"
                        android:textSize="16sp" />

                <TextView
                        android:id="@+id/tv_better2_pro_num_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sn_font"
                        android:maxLines="1"
                        android:paddingEnd="0dp"
                        android:paddingStart="2dp"
                        android:textColor="@color/comres_color_fa5050"
                        android:textSize="28sp" />
            </LinearLayout>

            <TextView
                    android:id="@+id/tv_better2_pro_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:textColor="@color/comres_color_8e94a8"
                    android:textSize="12sp" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_better2_pro_bottom_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/comres_color_8e94a8"
                        android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>