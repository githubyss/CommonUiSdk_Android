<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll_multi"
        android:orientation="vertical"
        android:background="@drawable/loan_corner_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="18dp">

            <TextView
                android:id="@+id/tv_right_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/loan_corner_ok"
                android:gravity="top"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/comres_color_d6ba78"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="-2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_loan_top_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/comres_color_121a32"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_loan_top_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:maxLines="1"
                android:textColor="@color/comres_color_8e94a8"
                android:textSize="13sp" />

        </LinearLayout>
        <!--：：：：：：：：：：：：：：：下面的要调整：：：：：：：：：：：：：-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="-2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:maxLines="1"
                        android:id="@+id/tv_loan_middle_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@color/comres_color_8e94a8"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:maxLines="1"
                            android:id="@+id/tv_loan_middle_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="@color/comres_color_fa5050"
                            android:textSize="12sp" />

                        <TextView
                            android:maxLines="1"
                            android:visibility="gone"
                            android:id="@+id/tv_loan_middle_num_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="@color/comres_color_fa5050"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:paddingStart="16dp">

                    <TextView
                        android:maxLines="1"
                        android:id="@+id/tv_bottom_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/sn_font"
                        android:textColor="@color/comres_color_fa5050"
                        android:textSize="28sp" />

                    <TextView
                        android:maxLines="1"
                        android:layout_gravity="bottom"
                        android:id="@+id/tv_bottom_num_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/comres_color_fa5050"
                        android:textSize="18sp" />

                    <TextView
                        android:maxLines="1"
                        android:id="@+id/tv_bottom_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="3dp"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/comres_color_8e94a8"
                        android:textSize="12sp" />
                    </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_bottom_one"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/home_icon_solid_select_gray2"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/comres_color_487bfe"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bt_bottom_two"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/home_icon_banner_solid_select"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/comres_color_white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>