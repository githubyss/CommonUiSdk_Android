<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:id="@+id/ll_better_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ll_better_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loan_corner_bg"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_better_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="2dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:maxLines="1"
                android:text="XXX"
                android:textColor="@color/comres_color_121a32"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_better_pro_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_next_lt_pro_medium"
                    android:maxLines="1"
                    android:text="XXX"
                    android:textColor="@color/comres_color_fa5050"
                    android:textSize="28sp"
                    />

                <TextView
                    android:id="@+id/tv_better_pro_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_next_lt_pro_medium"
                    android:layout_marginEnd="-2dp"
                    android:maxLines="1"
                    android:text="XXX"
                    android:textColor="@color/comres_color_fa5050"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_better_pro_num_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_next_lt_pro_medium"
                    android:maxLines="1"
                    android:paddingEnd="0dp"
                    android:paddingStart="2dp"
                    android:textColor="@color/comres_color_fa5050"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_better_pro_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:maxLines="1"
                android:text="XXX"
                android:textColor="@color/comres_color_8e94a8"
                android:textSize="12sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_better_pro_bottom_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:paddingEnd="6dp"
                    android:paddingStart="6dp"
                    android:text="XXX"
                    android:textColor="@color/comres_color_8e94a8"
                    android:textSize="12sp"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
