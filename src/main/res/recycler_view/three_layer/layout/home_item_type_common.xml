<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/rl_type_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comres_color_white">
        <ImageView
            android:id="@+id/iv_common_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tv_common_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_common_icon"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:textColor="@color/comres_color_121a32"
            android:textSize="@dimen/comres_textSize_16sp" />

        <ImageView
            android:id="@+id/iv_common_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/comres_sideMargin_normal"
            android:src="@drawable/arrow_personal_info_new" />

        <TextView
            android:id="@+id/tv_common_desc"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/iv_common_arrow"
            android:textColor="@color/comres_color_8e94a8"
            android:textSize="@dimen/comres_textSize_14sp" />

    </RelativeLayout>

</LinearLayout>

