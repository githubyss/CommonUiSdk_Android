<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/ll_deposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loan_corner_bg"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_deposit_msg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_deposit_msg1_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"

                    android:fontFamily="@font/sn_font"
                    android:textColor="@color/comres_color_fa5050"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/tv_deposit_msg1_left2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="-2dp"
                    android:maxLines="1"

                    android:fontFamily="@font/sn_font"
                    android:textColor="@color/comres_color_fa5050"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_deposit_msg1_left_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingStart="2dp"
                    android:paddingEnd="0dp"

                    android:textColor="@color/comres_color_fa5050"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_deposit_msg1_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/comres_color_121a32"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deposit_msg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:weightSum="5">

            <TextView
                android:id="@+id/tv_deposit_msg2_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1.8"
                android:gravity="center_vertical"
                android:maxLines="1"

                android:textColor="@color/comres_color_8e94a8"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_deposit_msg2_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_deposit_desc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingTop="3dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/comres_color_8e94a8"
                    android:textSize="12sp" />

                <!--            <TextView-->
                <!--                android:id="@+id/tv_deposit_desc2"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginStart="6dp"-->
                <!--                android:background="@drawable/home_icon_solid_select_gray"-->
                <!--                android:gravity="center_vertical"-->
                <!--                android:maxLines="1"-->
                <!--                android:paddingStart="4dp"-->
                <!--                android:paddingTop="3dp"-->
                <!--                android:paddingEnd="4dp"-->
                <!--                android:paddingBottom="3dp"-->
                <!--                android:textColor="@color/comres_color_55607c"-->
                <!--                android:textSize="10sp" />-->

                <!--            <TextView-->
                <!--                android:id="@+id/tv_deposit_desc3"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginStart="6dp"-->
                <!--                android:background="@drawable/home_icon_solid_select_gray"-->
                <!--                android:gravity="center_vertical"-->
                <!--                android:maxLines="1"-->
                <!--                android:paddingStart="4dp"-->
                <!--                android:paddingTop="3dp"-->
                <!--                android:paddingEnd="4dp"-->
                <!--                android:paddingBottom="3dp"-->
                <!--                android:textColor="@color/comres_color_55607c"-->
                <!--                android:textSize="10sp" />-->
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>