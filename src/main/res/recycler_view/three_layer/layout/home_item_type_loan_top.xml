<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/fl_loan_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignItems="center"
        app:flexDirection="column"
        app:justifyContent="flex_start">

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:justifyContent="center"
                app:alignItems="center">

            <View
                    android:layout_width="84dp"
                    android:layout_height="24dp" />

            <TextView
                    android:id="@+id/tv_loan_top_product_name"
                    android:layout_width="92dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/sn_font"
                    android:gravity="center"
                    android:lineHeight="30dp"
                    android:text="升级贷"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

            <ImageView
                    android:id="@+id/iv_loan_top_hot_icon"
                    android:layout_width="84dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_loan_star_product" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:flexDirection="row"
                app:justifyContent="center"
                app:alignItems="center">

            <TextView
                    android:id="@+id/tv_loan_top_desc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_loan_select"
                    android:drawablePadding="5dp"
                    android:text="年利率7.18%起"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            <TextView
                    android:id="@+id/tv_loan_top_desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:drawableLeft="@drawable/home_loan_select"
                    android:drawablePadding="5dp"
                    android:text="单利计息"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            <TextView
                    android:id="@+id/tv_loan_top_desc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:drawableLeft="@drawable/home_loan_select"
                    android:drawablePadding="5dp"
                    android:text="快速下款"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/fbl_loan_top_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="17dp"
                android:paddingBottom="15dp"
                android:background="@drawable/bg_home_loan_top_card"
                app:flexDirection="column"
                app:justifyContent="center"
                app:alignItems="center">

            <TextView
                    android:id="@+id/tv_loan_top_desc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高可借额度"
                    android:textColor="#8e94a8"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/tv_loan_top_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sn_font"
                    android:text="300,000.00"
                    android:textColor="#fa5050"
                    android:textSize="40sp" />

            <Button
                    android:id="@+id/btn_loan_top_primary"
                    android:layout_width="285dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_button"
                    android:text="立即申请"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            <!--<android.support.v7.widget.RecyclerView-->
            <!--        android:id="@+id/rv_common_button"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_marginTop="14dp" />-->
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
</FrameLayout>
