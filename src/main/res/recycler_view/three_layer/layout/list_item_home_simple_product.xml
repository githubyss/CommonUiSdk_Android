<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fl_simple_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            app:flexDirection="column"
            app:justifyContent="flex_start"
            app:alignItems="center">

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:justifyContent="flex_start"
                app:alignItems="center">

            <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天天盈"
                    android:textColor="@color/comres_color_121a32"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tv_product_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:paddingTop="1dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/bg_gray_radius_12"
                    android:text="代销理财"
                    android:textColor="@color/comres_color_55607c"
                    android:textSize="16sp" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:flexDirection="row"
                app:justifyContent="space_between"
                app:alignItems="center">

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="column"
                    app:justifyContent="flex_start"
                    app:alignItems="flex_start">

                <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexDirection="row"
                        app:justifyContent="flex_start"
                        app:alignItems="flex_end">

                    <TextView
                            android:id="@+id/tv_finance_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sn_font"
                            android:text="3.03"
                            android:textColor="@color/comres_color_fa5050"
                            android:textSize="40sp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sn_font"
                            android:text="%"
                            android:textColor="@color/comres_color_fa5050"
                            android:textSize="24sp" />

                </com.google.android.flexbox.FlexboxLayout>

                <TextView
                        android:id="@+id/tv_finance_rate_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="近7日年化"
                        android:textColor="@color/comres_color_8e94a8"
                        android:textSize="16sp" />
            </com.google.android.flexbox.FlexboxLayout>

            <Button
                    android:id="@+id/btn_button_name"
                    android:layout_width="120dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_button_round"
                    android:clickable="false"
                    android:text="去看看"
                    android:textColor="@color/comres_color_white"
                    android:textSize="24sp" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:flexDirection="row"
                app:justifyContent="space_between"
                app:alignItems="center">

            <TextView
                    android:id="@+id/tv_product_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1元起购 | 单日实时转出50万"
                    android:textColor="@color/comres_color_121a32"
                    android:textSize="18sp"
                    android:textStyle="bold" />
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>
