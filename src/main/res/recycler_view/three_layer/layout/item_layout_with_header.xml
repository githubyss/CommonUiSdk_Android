<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <!--头部隐藏时，这里的十个是一定要保留的，作为区域间距-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_header_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="5dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/tv_header_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="理财产品"
                android:textColor="@color/comres_color_3bd4b8"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_header_to_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/comres_color_transparent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:text="更多"
                android:textColor="@color/comres_color_8e94a8"
                android:textSize="13sp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:overScrollMode="never"
        />

</LinearLayout>
