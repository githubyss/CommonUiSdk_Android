<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wealth_layout_single"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:id="@+id/ll_wealth_layout_bg_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loan_corner_bg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ll_deposit_msg1_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:weightSum="5"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_wealth_num_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_next_lt_pro_medium"
                    android:maxLines="1"
                    android:text="XXX"
                    android:textColor="@color/comres_color_fa5050"
                    android:textSize="26sp"
                    />

                <TextView
                    android:id="@+id/tv_wealth_num2_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/din_next_lt_pro_medium"
                    android:layout_marginEnd="-2dp"
                    android:maxLines="1"
                    android:text="XXX"
                    android:textColor="@color/comres_color_fa5050"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_wealth_num_sign_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingEnd="0dp"
                    android:paddingStart="2dp"
                    android:text="XXX"
                    android:textColor="@color/comres_color_fa5050"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_wealth_name_single"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_weight="3.2"
                android:maxLines="1"
                android:text="XXX"
                android:textColor="@color/comres_color_121a32"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deposit_msg2_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:weightSum="5"
            >

            <TextView
                android:id="@+id/tv_wealth_desc_single"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:layout_weight="1.8"
                android:maxLines="1"
                android:text="XXX"

                android:textColor="@color/comres_color_8e94a8"
                android:textSize="12sp"
                />

            <LinearLayout
                android:id="@+id/ll_deposit_msg2_right_single"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.2"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_wealth_bottom_desc_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingEnd="4dp"
                    android:text="XXX"
                    android:textColor="@color/comres_color_8e94a8"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>