<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wealth_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:id="@+id/ll_wealth_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loan_corner_bg"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_wealth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:maxLines="1"
            android:text="XXX"
            android:textColor="@color/comres_color_121a32"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_wealth_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/din_next_lt_pro_medium"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="XXX"
                android:textColor="@color/comres_color_fa5050"
                android:textSize="28sp"
                />

            <TextView
                android:id="@+id/tv_wealth_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:ellipsize="end"
                android:fontFamily="@font/din_next_lt_pro_medium"
                android:gravity="center_horizontal"
                android:layout_marginEnd="-2dp"
                android:maxLines="1"
                android:text="XXX"
                android:textColor="@color/comres_color_fa5050"
                android:textSize="17sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_wealth_num_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/din_next_lt_pro_medium"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:paddingEnd="0dp"
                android:paddingStart="2dp"
                android:text="XXX"
                android:textColor="@color/comres_color_fa5050"
                android:textSize="17sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_wealth_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:maxLines="1"
            android:text="XXX"
            android:textColor="@color/comres_color_8e94a8"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_wealth_bottom_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:maxLines="1"
            android:text="XXX"
            android:textColor="@color/comres_color_8e94a8"
            android:textSize="10sp"
            />
    </LinearLayout>
</LinearLayout>
