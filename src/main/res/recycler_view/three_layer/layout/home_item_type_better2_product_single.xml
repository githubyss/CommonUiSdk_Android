<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--  这个布局是要动的，改成单个的  -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/ll_better2_bg_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_better2_pro_name_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/comres_color_121a32"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_better2_pro_bottom_one_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:maxLines="1"
                android:textColor="@color/comres_color_8e94a8"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tv_better2_pro_num_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/sn_font"
                android:maxLines="1"
                android:textColor="@color/comres_color_fa5050"
                android:textSize="28sp" />
            <TextView
                android:id="@+id/tv_better2_pro_num2_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/sn_font"
                android:maxLines="1"
                android:textColor="@color/comres_color_fa5050"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="6dp"
                android:fontFamily="@font/sn_font"
                android:id="@+id/tv_better2_pro_num_sign_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/comres_color_fa5050"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_better2_pro_desc_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:textColor="@color/comres_color_8e94a8"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>