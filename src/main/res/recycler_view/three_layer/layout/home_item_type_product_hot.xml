<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <!--TODO 后期文字去掉-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_hot_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_hot_product_bg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:src="@drawable/home_type_hot_product" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/tv_hot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:paddingTop="10dp"

                android:textColor="@color/comres_color_121a32"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hot_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/comres_color_fa5050"

                        android:fontFamily="@font/sn_font"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/tv_hot_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="-2dp"
                        android:maxLines="1"
                        android:textColor="@color/comres_color_fa5050"

                        android:fontFamily="@font/sn_font"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_hot_num_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingStart="2dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/comres_color_fa5050"

                        android:fontFamily="@font/sn_font"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_hot_middle_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/comres_color_8e94a8"

                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hot_desc_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/loan_text_gray"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="18"
                    android:maxLines="1"
                    android:paddingStart="6dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="3dp"

                    android:textColor="@color/comres_color_55607c"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_hot_esc_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/loan_text_gray"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="18"
                    android:maxLines="1"
                    android:paddingStart="6dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="3dp"

                    android:textColor="@color/comres_color_55607c"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_hot_desc_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/loan_text_gray"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="18"
                    android:maxLines="1"
                    android:paddingStart="6dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/comres_color_55607c"

                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/bt_new_bottom"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/home_icon_banner_solid_select"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/comres_color_white"

                android:textSize="12sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/bt_new_bottom_length"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/home_icon_banner_solid_select"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/comres_color_white"

                android:textSize="12sp" />

        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>