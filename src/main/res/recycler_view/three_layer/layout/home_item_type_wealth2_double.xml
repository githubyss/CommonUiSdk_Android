<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wealth_layout2_double"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/ll_wealth_layout_bg2_double"
        android:background="@drawable/loan_corner_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_wealth_name2_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:paddingTop="15dp"
            android:textColor="@color/comres_color_121a32"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wealth_num2_double"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:paddingTop="16dp"
                android:textColor="@color/comres_color_f18d00"
                android:textSize="20sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_wealth_num_sign2_double"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:paddingStart="2dp"
                android:paddingTop="16dp"
                android:paddingEnd="0dp"
                android:textColor="@color/comres_color_f18d00"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_wealth_desc2_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/loan_text_pink2"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/comres_color_f18d00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_wealth_bottom_desc2_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="13dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:textColor="@color/comres_color_55607c"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>