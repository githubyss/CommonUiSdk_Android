<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_recyclerFundManagerItem"
        android:background="@color/comres_color_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/comres_sideMargin_tiny"
        android:paddingRight="@dimen/comres_sideMargin_tiny"
        app:alignItems="center"
        app:flexDirection="column"
        app:justifyContent="flex_start"
        >

    <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/comres_sideMargin_tiny"
            android:paddingBottom="@dimen/comres_sideMargin_tiny"
            app:alignItems="center"
            app:flexDirection="row"
            app:justifyContent="flex_start"
            >

        <ImageView
                android:id="@+id/imageView_recyclerFundManagerImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/comres_tag_bg_rectangle_micro_gray"
                app:layout_flexShrink="0"
                />

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:alignItems="flex_start"
                app:flexDirection="column"
                app:justifyContent="space_between"
                >

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:justifyContent="flex_start"
                    >

                <TextView
                        android:id="@+id/textView_recyclerFundManagerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张静"
                        android:textColor="@color/comres_color_333333"
                        android:textSize="@dimen/comres_textSize_15sp"
                        android:textStyle="bold"
                        />

                <ImageView
                        android:id="@+id/textView_recyclerFundManagerIcon"
                        android:layout_width="45dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/comui_icon_fund_manager"
                        />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:justifyContent="flex_start"
                    >

                <TextView
                        android:id="@+id/textView_recyclerFundManagerBestReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任期最佳回报"
                        android:textColor="@color/comres_color_999999"
                        android:textSize="@dimen/comres_textSize_12sp"
                        />

                <TextView
                        android:id="@+id/textView_recyclerFundManagerRiseFallRatio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="+15.26%"
                        android:textColor="@color/comres_color_ff5500"
                        android:textSize="@dimen/comres_textSize_14sp"
                        />
            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                    android:id="@+id/textView_recyclerFundManagerDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="基金经理简介基金经理简介基金经理简介"
                    android:textColor="@color/comres_color_4a4a4a"
                    android:textSize="@dimen/comres_textSize_11sp"
                    />
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <include layout="@layout/comres_view_separator_horizontal_light_gray" />
</com.google.android.flexbox.FlexboxLayout>
