<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_recyclerGoldProductItem"
        android:background="@color/comres_color_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/comres_sideMargin_tiny"
        android:paddingRight="@dimen/comres_sideMargin_tiny"
        app:alignItems="center"
        app:flexDirection="column"
        app:justifyContent="flex_start"
        >

    <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/comres_sideMargin_normal"
            android:paddingBottom="@dimen/comres_sideMargin_tiny"
            app:alignItems="center"
            app:flexDirection="column"
            app:justifyContent="flex_start"
            >

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignItems="center"
                app:flexDirection="row"
                app:justifyContent="space_between"
                >

            <com.githubyss.mobile.common.ui.textview.KeyWordHighlightTextView
                    android:id="@+id/textView_recyclerGoldProductTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="博时黄金ETF联接C博时黄金ETF联接C博时黄金ETF联接C博时黄金ETF联接C"
                    android:textColor="@color/comres_color_333333"
                    android:textSize="@dimen/comres_textSize_15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_flexShrink="0"
                    >

                <TextView
                        android:id="@+id/textView_recyclerGoldProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="256.18"
                        android:textColor="@color/comres_color_ff5500"
                        android:textSize="@dimen/comres_textSize_18sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        />

                <TextView
                        android:id="@+id/textView_recyclerGoldProductUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/克"
                        android:textColor="@color/comres_color_ff5500"
                        android:textSize="@dimen/comres_textSize_12sp"
                        android:maxLines="1"
                        />
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:alignItems="center"
                app:flexDirection="row"
                app:justifyContent="space_between"
                >

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:justifyContent="space_between"
                    >

                <TextView
                        android:id="@+id/textView_recyclerGoldProductCode"
                        style="@style/comres_tag_gray_style"
                        android:layout_marginRight="8dp"
                        android:text="002013"
                        android:maxLines="1"
                        />

                <TextView
                        android:id="@+id/textView_recyclerGoldProductRisk"
                        style="@style/comres_tag_orange_style"
                        android:layout_marginRight="8dp"
                        android:text="中高风险"
                        android:maxLines="1"
                        />

                <TextView
                        android:id="@+id/textView_recyclerGoldProductClassify"
                        style="@style/comres_tag_gray_style"
                        android:layout_marginRight="8dp"
                        android:text="混合型"
                        android:maxLines="1"
                        />
            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                    android:id="@+id/textView_recyclerGoldProductPriceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05-26 最新金价"
                    android:textColor="@color/comres_color_999999"
                    android:textSize="@dimen/comres_textSize_11sp"
                    android:maxLines="1"
                    app:layout_flexShrink="0"
                    />
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <include layout="@layout/comui_view_separator_horizontal_light_gray" />
</com.google.android.flexbox.FlexboxLayout>
