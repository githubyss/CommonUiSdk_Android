<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_recyclerFinanceAqItem"
        android:background="@color/comres_color_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/comres_sideMargin_tiny"
        android:paddingRight="@dimen/comres_sideMargin_tiny"
        app:alignItems="center"
        app:flexDirection="column"
        app:justifyContent="flex_start"
        >

    <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/comres_sideMargin_large"
            android:paddingBottom="@dimen/comres_sideMargin_tiny"
            app:alignItems="flex_start"
            app:flexDirection="column"
            app:justifyContent="flex_start"
            >

        <TextView
                android:id="@+id/textView_recyclerFinanceAqTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一只基金从各方面看你都满意，但是基金的一…"
                android:textColor="@color/comres_color_333333"
                android:textSize="@dimen/comres_textSize_15sp"
                android:textStyle="bold"
                />

        <TextView
                android:id="@+id/textView_recyclerFinanceAqContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="这是财顾的问答，可能不包含搜索字段这是财顾的问答，可能不包含搜索字段这是财顾的问答，可能不包含搜索字段可能可能不包…"
                android:textColor="@color/comres_color_666666"
                android:textSize="@dimen/comres_textSize_11sp"
                />
    </com.google.android.flexbox.FlexboxLayout>

    <include layout="@layout/comres_view_separator_horizontal_light_gray" />
</com.google.android.flexbox.FlexboxLayout>
