<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_recyclerInsuranceProductItem"
        android:background="@color/comres_color_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/comres_sideMargin_tiny"
        android:paddingRight="@dimen/comres_sideMargin_tiny"
        app:alignItems="center"
        app:flexDirection="column"
        app:justifyContent="flex_start"
        >

    <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/comres_sideMargin_micro"
            android:paddingBottom="@dimen/comres_sideMargin_micro"
            app:alignItems="center"
            app:flexDirection="row"
            app:justifyContent="flex_start"
            >

        <ImageView
                android:id="@+id/imageView_recyclerInsuranceProductImage"
                android:layout_width="90dp"
                android:layout_height="58dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/comres_tag_bg_rectangle_micro_gray"
                app:layout_flexShrink="0"
                />

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:alignItems="flex_start"
                app:flexDirection="column"
                app:justifyContent="space_between"
                app:layout_flexGrow="1"
                >

            <com.githubyss.mobile.common.ui.textview.KeyWordHighlightTextView
                    android:id="@+id/textView_recyclerInsuranceProductTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="华保健康百万医疗险华保健康百万医疗险华保健康百万医疗险"
                    android:textColor="@color/comres_color_333333"
                    android:textSize="@dimen/comres_textSize_15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            <TextView
                    android:id="@+id/textView_recyclerInsuranceProductHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingRight="20dp"
                    android:text="最高24.3万｜无免赔｜成长无忧"
                    android:textColor="@color/comres_color_999999"
                    android:textSize="@dimen/comres_textSize_12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            <TextView
                    android:id="@+id/textView_recyclerInsuranceProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingRight="20dp"
                    android:text="1元首付"
                    android:textColor="@color/comres_color_ff5500"
                    android:textSize="@dimen/comres_textSize_14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <include layout="@layout/comui_view_separator_horizontal_light_gray" />
</com.google.android.flexbox.FlexboxLayout>
