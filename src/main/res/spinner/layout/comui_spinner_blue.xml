<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <Spinner
        android:id="@+id/spinner_passenger"
        android:background="@drawable/comui_spinner_bg_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownVerticalOffset="100dp"
        android:dropDownWidth="wrap_content"
        android:entries="@array/comres_languages"
        android:gravity="center"
        android:popupBackground="@drawable/comui_spinner_dropdown_white"
        android:spinnerMode="dropdown"
        android:popupPromptView="@android:layout/simple_dropdown_hint"
        />
</merge>
