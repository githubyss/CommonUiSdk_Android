<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.githubyss.mobile.common.ui"
    tools:ignore="LockedOrientationActivity"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.application.ComuiApplication"
        android:allowBackup="false"
        android:icon="@mipmap/comres_ic_launcher"
        android:label="${APP_NAME}"
        android:roundIcon="@mipmap/comres_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/comres_app_gray_theme"
        >

        <activity
            android:name=".app.page.homepage.HomepageActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/comres_activity_noActionBar_theme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.page.mvvm.MvvmActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/comres_activity_noActionBar_theme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            />

        <activity
            android:name=".app.page.view_binding.reflect.ReflectActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/comres_activity_noActionBar_theme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            />

        <activity
            android:name=".app.page.view_binding.inline.InlineActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/comres_activity_noActionBar_theme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            />

        <activity
            android:name=".app.page.view_binding.reflect.ReflectToolbarActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/comres_activity_noActionBar_theme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            />

        <activity
            android:name=".app.page.view_binding.inline.InlineToolbarActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/comres_activity_noActionBar_theme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            />

        <activity
            android:name=".app.page.speech_recognition.SpeechRecognitionActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/comres_activity_noActionBar_theme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            />
    </application>
</manifest>
