<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="page"
            type="com.githubyss.mobile.common.ui.app.page.animate.apng.ApngFragment"
            />
    </data>

    <FrameLayout
        android:background="@color/comres_color_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageApng"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:onClick="@{() -> page.onImageClick()}"
            android:src="@drawable/comui_anim_speaking"
            />
    </FrameLayout>
</layout>
