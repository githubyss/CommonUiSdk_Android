<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="com.githubyss.mobile.common.ui.app.page.homepage.HomepageViewModel" />

        <variable
            name="homepageVm"
            type="HomepageViewModel"
            />
    </data>

    <FrameLayout
        android:id="@+id/layout_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/comres_layoutBg_lightGray"
        android:orientation="vertical"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            >

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/comres_sideMargin_normal"
                android:paddingRight="@dimen/comres_sideMargin_normal"
                android:paddingBottom="@dimen/comres_sideMargin_normal"
                android:paddingLeft="@dimen/comres_sideMargin_normal"
                app:flexDirection="column"
                app:justifyContent="flex_start"
                app:alignItems="center"
                >

                <com.google.android.flexbox.FlexboxLayout style="@style/comres_equant_horizontal_flex_style">

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:id="@+id/button_property_animation"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text="@string/comui_homepage_button_property_animation"
                        />

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:id="@+id/button_tween_animation"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text="@string/comui_homepage_button_tween_animation"
                        />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout style="@style/comres_equant_horizontal_flex_style">

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:id="@+id/button_recycler_view"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text="@string/comui_homepage_button_recycler_view"
                        />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout style="@style/comres_equant_horizontal_flex_style">

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:id="@+id/button_floating_window"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text="@string/comui_homepage_button_floating_window"
                        />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout style="@style/comres_equant_horizontal_flex_style">

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:id="@+id/button_play_pause_controller"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text="@string/comres_audio_player_play"
                        />

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:id="@+id/button_previous"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text="@string/comres_audio_player_previous"
                        />

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:id="@+id/button_next"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text="@string/comres_audio_player_next"
                        />

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:id="@+id/button_switch_voice"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text="@string/comres_audio_player_switch_voice"
                        />

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:id="@+id/button_stop"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text="@string/comres_audio_player_stop"
                        />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout style="@style/comres_equant_horizontal_flex_style">

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:id="@+id/button_speech_recognition"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text="@string/comui_homepage_button_speech_recognition"
                        />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout style="@style/comres_equant_horizontal_flex_style">

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text=""
                        />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout style="@style/comres_equant_horizontal_flex_style">

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text=""
                        />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout style="@style/comres_equant_horizontal_flex_style">

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text=""
                        />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout style="@style/comres_equant_horizontal_flex_style">

                    <Button
                        style="@style/comres_equant_horizontal_button_style"
                        android:onClick="@{homepageVm::onAnyButtonClick}"
                        android:text=""
                        />
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>
