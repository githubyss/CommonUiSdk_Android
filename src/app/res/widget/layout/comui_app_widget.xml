<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/comuiStyle_AppWidgetContainer"
    android:theme="@style/comuiTheme_AppWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        style="@style/comuiStyle_AppWidgetInnerView"
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/comui_app_widget_text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/comui_app_widget_text"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        />
</RelativeLayout>