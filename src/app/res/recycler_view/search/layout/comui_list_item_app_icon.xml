<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

    </data>

    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxItemAppIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/comres_sideMargin_micro"
            android:paddingBottom="@dimen/comres_sideMargin_tiny"
            android:paddingLeft="@dimen/comres_sideMargin_tiny"
            android:paddingRight="@dimen/comres_sideMargin_tiny"
            android:background="@color/comres_color_transparent"
            app:flexDirection="column"
            app:justifyContent="center"
            app:alignItems="center"
            >

        <ImageView
                android:id="@+id/imageAppIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                />

        <com.githubyss.mobile.common.ui.text_view.classical.KeyWordHighlightTextView
                android:id="@+id/textAppIconLabel"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="定投管理定投管理定投管理定投管理"
                android:textColor="@color/comres_color_333333"
                android:textSize="@dimen/comres_textSize_12sp"
                />
    </com.google.android.flexbox.FlexboxLayout>
</layout>
