<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.githubyss.mobile.common.ui.app.page.recycler_view.search.template.fund_product.FundProductModel" />

        <variable
            name="fundProduct"
            type="FundProductModel" />
    </data>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxItemFundProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/comres_sideMargin_tiny"
        android:paddingLeft="@dimen/comres_sideMargin_tiny"
        android:background="@color/comres_color_transparent"
        app:flexDirection="column"
        app:justifyContent="flex_start"
        app:alignItems="center">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/comres_sideMargin_micro"
            android:paddingBottom="@dimen/comres_sideMargin_micro"
            app:flexDirection="column"
            app:justifyContent="flex_start"
            app:alignItems="center">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:justifyContent="space_between"
                app:alignItems="center">

                <com.githubyss.mobile.common.ui.text_view.classical.KeyWordHighlightTextView
                    android:id="@+id/textFundProductTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{fundProduct.title}"
                    android:textColor="@color/comres_color_333333"
                    android:textSize="@dimen/comres_textSize_15sp"
                    android:textStyle="bold" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="column"
                    app:justifyContent="space_between"
                    app:alignItems="flex_end"
                    app:layout_flexShrink="0">

                    <TextView
                        android:id="@+id/textFundProductRiseFallRatio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@{fundProduct.riseFallRatio}"
                        android:textColor="@color/comres_color_ff5500"
                        android:textSize="@dimen/comres_textSize_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textFundProductRiseFallTimeSpan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:maxLines="1"
                        android:text="@{fundProduct.riseFallTimeSpan}"
                        android:textColor="@color/comres_color_999999"
                        android:textSize="@dimen/comres_textSize_11sp" />
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:flexDirection="row"
                app:justifyContent="space_between"
                app:alignItems="center">

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    app:flexDirection="row"
                    app:justifyContent="space_between"
                    app:alignItems="center">

                    <TextView
                        style="@style/comres_tag_style_gray"
                        android:id="@+id/textFundProductCode"
                        android:layout_marginRight="8dp"
                        android:maxLines="1"
                        android:text="@{fundProduct.code}"
                        android:textSize="11sp" />

                    <TextView
                        style="@style/comres_tag_style_orange"
                        android:id="@+id/textFundProductRisk"
                        android:layout_marginRight="8dp"
                        android:maxLines="1"
                        android:text="@{fundProduct.risk}"
                        android:textSize="11sp" />

                    <TextView
                        style="@style/comres_tag_style_gray"
                        android:id="@+id/textFundProductClassify"
                        android:layout_marginRight="8dp"
                        android:maxLines="1"
                        android:text="@{fundProduct.classify}"
                        android:textSize="11sp" />
                </com.google.android.flexbox.FlexboxLayout>

                <Button
                    style="@style/comres_buttonToggle_rectangle_blue_transparent_style"
                    android:id="@+id/buttonFundProductIsFollowed"
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:textSize="@dimen/comres_textSize_13sp"
                    app:layout_flexShrink="0" />
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <include layout="@layout/comres_view_separator_horizontal_light_gray" />
    </com.google.android.flexbox.FlexboxLayout>
</layout>
