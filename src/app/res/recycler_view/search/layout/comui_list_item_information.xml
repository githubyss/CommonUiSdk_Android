<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

    </data>

    <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxItemInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/comres_sideMargin_tiny"
            android:paddingRight="@dimen/comres_sideMargin_tiny"
            android:background="@color/comres_color_transparent"
            app:flexDirection="column"
            app:justifyContent="flex_start"
            app:alignItems="center"
            >

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/comres_sideMargin_micro"
                android:paddingBottom="@dimen/comres_sideMargin_micro"
                app:flexDirection="column"
                app:justifyContent="flex_start"
                app:alignItems="flex_start"
                >

            <com.githubyss.mobile.common.ui.text_view.KeyWordHighlightTextView
                    android:id="@+id/textInformationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:maxLines="1"
                    android:text="2019年中国厨房料理小家电销售过万2019年2019年中国厨房料理小家电销售过万2019年..."
                    android:textColor="@color/comres_color_333333"
                    android:textSize="@dimen/comres_textSize_15sp"
                    android:textStyle="bold"
                    />

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:flexDirection="row"
                    app:justifyContent="flex_start"
                    app:alignItems="center"
                    >

                <ImageView
                        android:id="@+id/imageInformation"
                        android:layout_width="84dp"
                        android:layout_height="54dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/comres_tag_bg_rectangle_micro_gray"
                        app:layout_flexShrink="0"
                        />

                <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:flexDirection="column"
                        app:justifyContent="space_between"
                        app:alignItems="flex_start"
                        app:layout_flexGrow="1"
                        >

                    <com.githubyss.mobile.common.ui.text_view.KeyWordHighlightTextView
                            android:id="@+id/textInformationContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="在经销商体系最完善和成熟的北美在经销商体系最完善和成熟的北美在经销商体系最完善和成熟的北美，过去数年中，最大的汽车零售商是谁？答案或"
                            android:textColor="@color/comres_color_666666"
                            android:textSize="@dimen/comres_textSize_12sp"
                            />

                    <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:flexDirection="row"
                            app:justifyContent="flex_start"
                            app:alignItems="center"
                            >

                        <TextView
                                android:id="@+id/textInformationTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="03-16 12:56"
                                android:textColor="@color/comres_color_999999"
                                android:textSize="@dimen/comres_textSize_12sp"
                                />

                        <TextView
                                android:id="@+id/textInformationAuthor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:maxLines="1"
                                android:text="相关机构"
                                android:textColor="@color/comres_color_999999"
                                android:textSize="@dimen/comres_textSize_12sp"
                                />
                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <include layout="@layout/comres_view_separator_horizontal_light_gray" />
    </com.google.android.flexbox.FlexboxLayout>
</layout>
